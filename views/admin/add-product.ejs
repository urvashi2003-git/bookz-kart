<%- include('../layouts/admin-header.ejs') %>

    <div class="dash-content container add">
        <h2 class="page-title">Add a Product</h2>
        <a href="/admin/product" class="btn"><i class="fa fa-angle-left"></i></a>

        <br><br>
        <div class="row">
            <form id="add-edit" method="post" action="/admin/product/add-product" enctype="multipart/form-data">
                <% error.forEach(function(err){ %>
                    <div class="alert alert-success" role="alert">
                        <%= err %>
                    </div>
                    <%})%>
                        <div class="form-group">
                            <input id="title" type="text" class="box" name="title" placeholder="Title">
                        </div>
                        <div class="form-group">
                            <input id="author" type="text" class="box" name="author" placeholder="Author">
                        </div>
                        <div class="form-group">
                            <input id="publishDate" type="date" class="box" name="publishDate"
                                placeholder="Publish Date">
                        </div>
                        <div class="form-group">
                            <input id="pageCount" type="number" class="box" name="pageCount" placeholder="Page Count">
                        </div>

                        <div class="form-group">
                            <textarea id="description" type="text" class="box" cols="20" rows="5" name="description"
                                placeholder="description"></textarea>
                        </div>
                        <div class="form-group">
                            <select id="category" class="box" name="category" value="" placeholder="category">
                                <option value="">category</option>
                                <% categories.forEach(function(cat){%>
                                    <option value="<%= cat.title %>">
                                        <%= cat.title %>
                                    </option>
                                    <%});%>
                            </select>
                        </div>
                        <div class="form-group">
                            <input id="image" type="file" class="box" name="image">
                            <img src="#" id="img-prvw" alt="">
                        </div>
                        <div class="form-group">
                            <input id="price" type="number" class="box" name="price" placeholder="price in rupees">
                        </div>
                        <br>
                        <button type="submit" class="btn btn-default">Submit</button>
            </form>
        </div>
    </div>

    </section>


    <%- include('../layouts/admin-footer.ejs') %>